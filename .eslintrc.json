{
  "extends": ["@elonkit/eslint-config", "plugin:storybook/recommended"],
  "rules": {
    "simple-import-sort/imports": [
      "error",
      {
        "groups": [
          ["^react"],
          ["^\\.\\./\\.\\./testing"],
          ["^.+\\.types$"],
          ["^(@testing-library|@storybook|@date-io|date-fns)"],
          ["^clsx", "^.+\\.classes$"],
          ["^@mui/base"],
          ["^@mui/material/styles", "^@mui/system", "^@mui/material", "^@mui/utils"],
          ["^\\./(?=.*/)(?!/?$)", "^\\.(?!/?$)", "^\\./?$"],
          ["^\\.\\.(?!/?$)", "^\\.\\./?$"]
        ]
      }
    ]
  }
}
